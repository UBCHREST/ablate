FROM ghcr.io/ubchrest/petsc-docker/petsc-build:4cb72fa8

# Setup the petsc env
ENV PETSC_ARCH=arch-opt
ENV PKG_CONFIG_PATH="${PETSC_DIR}/${PETSC_ARCH}/lib/pkgconfig:$PKG_CONFIG_PATH"
ENV PATH="${PETSC_DIR}/${PETSC_ARCH}/bin:$PATH"

# Install dependencies
RUN apt-get update
RUN apt-get install -y clang-format

# Copy over the source
COPY . /source
WORKDIR /build

# Configure & build
run cmake -S /source/ -B .
run make -j $(nproc)

# Specify Entry Point for tests
CMD bash -c "make format-check && ctest"